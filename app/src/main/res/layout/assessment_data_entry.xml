<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <include layout="@layout/course_list_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"

        android:layout_marginBottom="@dimen/margin_large"
        android:id="@+id/course_list_item"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_large"/>
    <!--app:layout_constraintBottom_toTopOf="@+id/label_name"-->
 <!--   <TextView
        android:id="@+id/label_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginLeft="@dimen/keyline"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginStart="@dimen/keyline"
        android:text="Assessment Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="@dimen/margin_large"
        app:layout_constraintTop_toBottomOf="@+id/course_list_item"/>-->
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginLeft="@dimen/keyline"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginStart="@dimen/keyline"
        android:layout_marginTop="@dimen/margin_large"
        android:ems="10"
        android:hint="Assessment Name"
        android:inputType="text|textCapSentences|textAutoCorrect"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_list_item"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>
    <!--app:layout_constraintTop_toBottomOf="@+id/label_name"-->
<!--    <TextView
        android:id="@+id/label_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:text="Notes"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_name"
        android:layout_marginStart="@dimen/keyline"
        android:layout_marginEnd="@dimen/margin_large"/>-->
    <EditText
        android:id="@+id/edit_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginLeft="@dimen/keyline"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginStart="@dimen/keyline"
        android:layout_marginTop="@dimen/margin_large"
        android:ems="10"
        android:hint="Notes"
        android:inputType="text|textCapSentences|textAutoCorrect|textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_name"

        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>
    <!--app:layout_constraintBottom_toTopOf="@+id/separator1"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/label_notes"-->
    <!--android:theme="@style/AppTheme.EditControl"-->
    <View
        android:id="@+id/separator1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#FFc0c0c0"
        android:layout_marginLeft="@dimen/keyline"
        android:layout_marginStart="@dimen/keyline"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"

        app:layout_constraintTop_toBottomOf="@+id/edit_notes"/>
    <!--app:layout_constraintBottom_toTopOf="@+id/edit_start_date"-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/edit_start_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_access_time_black_24dp"
        tools:layout_editor_absoluteY="261dp"
        app:layout_constraintRight_toLeftOf="@+id/edit_start_date"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
        android:id="@+id/edit_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline"
        android:layout_marginStart="@dimen/keyline"
        android:layout_marginTop="@dimen/margin_large"
        android:ems="8"
        android:onClick="showStartDatePickerDialog"
        android:text="Start Date"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator1"
        /> <!--android:theme="@style/AppTheme.EditControl"-->

    <TextView
        android:id="@+id/edit_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:ems="6"
        android:onClick="showStartTimePickerDialog"
        android:text="Start Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator1"
        />
    <!--android:theme="@style/AppTheme.EditControl"-->
    <!--android:inputType="datetime|time"-->
    <View
        android:id="@+id/separator2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#FFc0c0c0"
        android:layout_marginLeft="@dimen/keyline"
        android:layout_marginStart="@dimen/keyline"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"

        app:layout_constraintTop_toBottomOf="@+id/edit_end_date"/>
    <Spinner
        android:id="@+id/spinner_assessment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline"
        android:layout_marginTop="@dimen/margin_large"
        android:entries="@array/assessment_type_name"
        android:prompt="@string/assessment_type"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_assessment_type"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="@dimen/keyline"/>
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--android:theme="@style/AppTheme.EditControl"-->
    <TextView
        android:id="@+id/edit_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline"
        android:layout_marginStart="@dimen/keyline"
        android:layout_marginTop="16dp"
        android:ems="8"
        android:onClick="showEndDatePickerDialog"
        android:text="End Date"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_start_date"
        />
    <!--android:theme="@style/AppTheme.EditControl"-->

    <TextView
        android:id="@+id/edit_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:ems="6"
        android:onClick="showEndTimePickerDialog"

        android:text="End Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_start_time"
        />
    <TextView
        android:id="@+id/label_assessment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline"
        android:layout_marginTop="16dp"
        android:text="Assessment Type"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator2"
        android:layout_marginStart="@dimen/keyline"/>
<!--android:theme="@style/AppTheme.EditControl"-->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="createAssessment"
        android:text="Create Assessment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_assessment_type"
        app:layout_constraintVertical_bias="0.941"
        app:layout_constraintHorizontal_bias="1.0"/>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/keyline"
        android:layout_marginStart="@dimen/keyline"
        android:onClick="cancel"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_assessment_type"
        app:layout_constraintVertical_bias="1.0"/>



</android.support.constraint.ConstraintLayout></ScrollView>