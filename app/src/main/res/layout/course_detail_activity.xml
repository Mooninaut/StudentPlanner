<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/course_detail_container"
    android:background="@color/colorLightGray">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_detail"
        android:background="@color/colorLightGray">
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorCourseBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mentor_header"
        android:layout_marginTop="@dimen/margin_divider"
        android:layout_marginBottom="@dimen/margin_divider"/>
    <TextView
        android:id="@+id/course_number_text_view"
        android:textSize="20sp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:gravity="center"
        android:background="@drawable/white_circle"
        android:textColor="@color/colorDarkGray"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/course_name_text_view"
        android:text="12"
        app:layout_constraintBottom_toTopOf="@+id/mentor_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/course_name_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginLeft="@dimen/keyline"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginStart="@dimen/keyline"
        android:text="courseName"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:textSize="30sp"
        android:gravity="start|center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        app:layout_constraintBottom_toTopOf="@+id/mentor_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/course_start_text_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="36sp"/>

    <TextView
        android:id="@+id/course_start_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:gravity="end"
        android:text="courseStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:layout_marginTop="@dimen/margin_large"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/course_end_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:gravity="end"
        android:text="courseEnd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_start_text_view"
        />
    <TextView
        android:id="@+id/mentor_header"
        android:layout_width="0dp"
        android:textSize="24sp"
        android:layout_marginTop="@dimen/margin_large"
        android:padding="@dimen/margin_small"
        android:textAlignment="center"
        android:background="@color/colorMentorBackground"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:text="Course Mentors"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_end_text_view"/>

    <ImageButton
        android:id="@+id/add_mentor_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/add_mentor"
        android:onClick="addCourseMentor"
        app:layout_constraintBottom_toBottomOf="@+id/mentor_header"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mentor_header"
        app:srcCompat="@drawable/ic_action_add"/>

    <FrameLayout
        android:id="@+id/mentor_list_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mentor_header"/>

    <TextView
        android:id="@+id/assessment_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAssessment"
        android:padding="@dimen/margin_small"
        android:text="@string/assessments"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mentor_list_fragment"/>

    <ImageButton
        android:contentDescription="@string/add_assessment"
        android:id="@+id/add_assessment_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:onClick="addAssessment"
        app:layout_constraintDimensionRatio="1"
        app:srcCompat="@drawable/ic_action_add"
        app:layout_constraintBottom_toBottomOf="@id/assessment_header"
        app:layout_constraintTop_toTopOf="@id/assessment_header"
        app:layout_constraintRight_toRightOf="parent"/>

    <FrameLayout
        android:id="@+id/assessment_list_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assessment_header"/>

    <TextView
        android:id="@+id/note_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorNote"
        android:padding="@dimen/margin_small"
        android:text="@string/notes"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assessment_list_fragment"/>

    <ImageButton
        android:contentDescription="@string/add_note"
        android:id="@+id/add_note_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:onClick="addNote"
        app:layout_constraintDimensionRatio="1"
        app:srcCompat="@drawable/ic_action_add"
        app:layout_constraintBottom_toBottomOf="@id/note_header"
        app:layout_constraintTop_toTopOf="@id/note_header"
        app:layout_constraintRight_toRightOf="parent"/>
    <FrameLayout
        android:id="@+id/note_list_fragment"
        app:layout_constraintTop_toBottomOf="@+id/note_header"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"/>


    </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>